<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:csv="http://schemas.android.com/apk/res/com.squeed.golftracker"
	android:orientation="vertical" android:layout_width="match_parent"
	android:layout_height="match_parent" android:background="@drawable/background_01p">
	<Button android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:id="@+id/saveShotBtn"
		android:layout_alignParentBottom="true"
		android:layout_centerHorizontal="true" android:text="@string/saveLbl"></Button>
	<TextView android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:textSize="56dp"
		android:text="--" android:textAppearance="?android:attr/textAppearanceLarge"
		android:layout_below="@+id/textView2" android:layout_alignParentLeft="true"
		android:layout_marginLeft="15dp" android:id="@+id/holeVal"></TextView>
	<TextView android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:textSize="56dp"
		android:text="---" android:textAppearance="?android:attr/textAppearanceLarge"
		android:layout_below="@+id/textView1" android:layout_alignParentRight="true"
		android:layout_marginRight="16dp" android:id="@+id/lengthVal"
		android:gravity="right"></TextView>
	<TextView android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:text="@string/holeLbl"
		android:textAppearance="?android:attr/textAppearanceSmall" android:id="@+id/textView2"
		android:layout_above="@+id/lengthVal" android:layout_alignLeft="@+id/holeVal"></TextView>

	<com.squeed.ui.CustomSpinnerView
		android:width="280dp" android:layout_width="wrap_content" android:id="@+id/clubSpinner"
		csv:textSize="34" android:layout_height="wrap_content"
		android:layout_below="@+id/textView5" csv:textAlign="right"
		csv:iconAlign="left" android:layout_alignParentLeft="true" android:layout_alignRight="@+id/saveShotBtn"></com.squeed.ui.CustomSpinnerView>
	<com.squeed.ui.CustomSpinnerView
		android:width="200dp" android:layout_width="wrap_content" android:id="@+id/shotShapeSpinner"
		android:layout_height="wrap_content" android:layout_alignTop="@+id/clubSpinner"
		csv:textSize="34" csv:textAlign="right" csv:iconAlign="left"
		android:layout_alignParentRight="true" android:layout_toRightOf="@+id/saveShotBtn"></com.squeed.ui.CustomSpinnerView>
	<TextView android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:textAppearance="?android:attr/textAppearanceMedium"
		android:id="@+id/textView5" android:layout_below="@+id/holeVal"
		android:layout_alignLeft="@+id/holeVal" android:layout_marginTop="15dp"
		android:text="@string/clubLbl"></TextView>
	<TextView android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:textAppearance="?android:attr/textAppearanceMedium"
		android:id="@+id/shotProfileId" android:layout_alignBaseline="@+id/textView5"
		android:layout_alignBottom="@+id/textView5" android:layout_alignRight="@+id/lengthVal"
		android:text="@string/ballTrajectoryLbl"></TextView>
	<TextView android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:text="@string/lengthLbl"
		android:textAppearance="?android:attr/textAppearanceSmall" android:id="@+id/textView1"
		android:layout_alignParentTop="true" android:layout_alignLeft="@+id/shotProfileId"></TextView>

</RelativeLayout>
